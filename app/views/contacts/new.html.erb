<% provide(:title, "お問い合わせ") %>
<div class="container_wrap">
<%= form_for(@contact, url: confirm_path) do |f| %>
  <div class="container_contact my-5">
    <h5>お問い合わせフォーム</h5>
    <div class="form-group">
      <%= f.label :name, 'お名前*' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :name, '返信先メールアドレス*' %>
      <%= f.text_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :name, '電話番号*' %>
      <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :name, '件名*' %>
      <%= f.text_field :subject, autofocus: true, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :message, 'メッセージ*' %>
      <%= f.text_area :message, size: '10x10', class: 'form-control',:placeholder => "質問などはこちらへお願いします" %>
    </div>
  
    <div class="flex">
      <%= f.submit '入力内容確認', class:"waves-effect waves-light btn" %>
    </div>
  </div>
  </div>
<% end %>

  